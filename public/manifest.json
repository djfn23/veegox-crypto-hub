  "shortcuts": [
    {
      "name": "Wallet",
      "short_name": "Wallet",
      "description": "Accédez à votre portefeuille de cryptomonnaies",
      "url": "/wallet",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Trading",
      "short_name": "Trade",
      "description": "Accès rapide au trading",
      "url": "/trading",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Marketplace",
      "short_name": "NFT",
      "description": "Parcourir la place de marché NFT",
      "url": "/marketplace",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Staking",
      "short_name": "Stake",
      "description": "Services de staking",
      "url": "/staking",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Accueil Veegox sur desktop"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Accueil Veegox sur mobile"
    }
  ],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [
          ".json"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+crypto",
      "url": "/protocol?url=%s"
    }
  ],
  "capture_links": "new-client",
  "features": [
    "Gestion de portefeuille crypto",
    "Échange de cryptomonnaies",
    "Création de jetons personnalisés",
    "Plateforme de crowdfunding",
    "Marché NFT",
    "IA pour analyse de crypto",
    "Services bancaires crypto",
    "Staking et yield farming"
  ],
  "permissions_policy": {
    "geolocation": [
      "self"
    ],
    "camera": [
      "self"
    ],
    "microphone": [
      "self"
    ]
  },
  "note": "Version optimisée avec toutes les fonctionnalités DeFi de Veegox"
}
